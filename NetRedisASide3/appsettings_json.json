// appsettings.json
{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Redis": {
    "Connection": "redis:6379,password=${REDIS_PASSWORD}"
  },
  "Keycloak": {
    "Authority": "http://keycloak:8080/realms/netredisaside3",
    "Audience": "netredisaside3-api",
    "MetadataAddress": "http://keycloak:8080/realms/netredisaside3/.well-known/openid-configuration",
    "RequireHttpsMetadata": false,
    "ValidateAudience": true,
    "ValidateIssuer": true,
    "ValidateLifetime": true
  }
}

// appsettings.Development.json
{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "Redis": {
    "Connection": "localhost:6379"
  },
  "Keycloak": {
    "Authority": "http://localhost:8080/realms/netredisaside3",
    "Audience": "netredisaside3-api",
    "MetadataAddress": "http://localhost:8080/realms/netredisaside3/.well-known/openid-configuration",
    "RequireHttpsMetadata": false,
    "ValidateAudience": true,
    "ValidateIssuer": true,
    "ValidateLifetime": true
  }
}